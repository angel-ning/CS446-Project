<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/arrow_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/distanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textSize="@dimen/button_text"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_component_margin"
            android:text="1 km"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded_rectangle_bg"
            android:backgroundTint="@color/button_selector"
            app:layout_constraintEnd_toStartOf="@id/btn5km"
            app:layout_constraintTop_toBottomOf="@id/distanceTitle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_component_margin"
            android:text="5 km"
            android:background="@drawable/rounded_rectangle_bg"
            android:backgroundTint="@color/button_selector"
            app:layout_constraintStart_toEndOf="@id/btn1km"
            app:layout_constraintEnd_toStartOf="@id/btn10km"
            app:layout_constraintTop_toBottomOf="@id/distanceTitle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn10km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_component_margin"
            android:text="10 km"
            android:background="@drawable/rounded_rectangle_bg"
            android:backgroundTint="@color/button_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn5km"
            app:layout_constraintTop_toBottomOf="@id/distanceTitle" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:layout_marginBottom="50dp"
            android:background="@drawable/round_button_black"
            android:backgroundTint="@color/quantum_googgreen200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>